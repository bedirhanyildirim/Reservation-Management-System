@model ApplicationSource
@{
    ViewData["Title"] = "Edit Sources";
}
<form asp-controller="Source" asp-action="UpdateSource" asp-route-id="@ViewBag.EditSource.Id" method="post">
    <h4>Edit Source</h4>
    <hr />
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group col-md-4">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" value="@ViewBag.EditSource.Name" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group col-md-4">
        <label asp-for="Capacity"></label>
        <input asp-for="Capacity" class="form-control" value="@ViewBag.EditSource.Capacity"/>
        <span asp-validation-for="Capacity" class="text-danger"></span>
    </div>
    <div class="form-group col-md-4">
        <label asp-for="Description"></label>
        <input asp-for="Description" class="form-control" value="@ViewBag.EditSource.Description"/>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
</form>